@model BugTracker.Models.CodeFirst.TicketAttachment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "TicketAttachments", FormMethod.Post, new { enctype = "Multipart/form-data" })) { // Encoding Type must be here to submit a file

    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TicketAttachment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Created)
        @Html.HiddenFor(model => model.TicketId)
        @Html.HiddenFor(model => model.AuthorId)




        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="text-align:right;">Upload Media</label>
            <div class="col-md-10">
                <div class="post-image opacity"><img src="@Url.Content(@Model.FileUrl)" width="1170" height="382" alt="" title=""></div>
                <input name="media" type="file" class="form-control No_Horizontal_Padding" style="padding-left: 0px; border:none; outline:none;" />
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.FileUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FileUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FileUrl, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

